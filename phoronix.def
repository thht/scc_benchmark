Bootstrap: docker
From: torxcz/phoronix-test-suite:latest

%files 
    phoronix-test-suite.xml /etc/phoronix-test-suite.xml
    
%post
    chmod a+w /etc/phoronix-test-suite.xml
    chmod -R a+w /phoronix-test-suite
    /phoronix-test-suite/phoronix-test-suite batch_install pts/fftw pts/ffte
    apt-get update
    apt-get -y install vim

%runscript
    /phoronix-test-suite/phoronix-test-suite batch_run pts/fftw pts/ffte